<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Name"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_toRightOf="@id/nameTextView"
        android:padding="16dp"
        android:text="abhinav"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/PhoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTextView"
        android:padding="16dp"
        android:text="Phone Number"
        android:textColor="#000"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/PhoneNumberType1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PhoneNumberTextView"
        android:padding="16dp"
        android:text="Phone Number"
        android:textColor="#000"
        android:textSize="16sp"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/PhoneNumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PhoneNumberTextView"
        android:layout_toRightOf="@id/PhoneNumberType1"
        android:padding="16dp"
        android:text="Phone Number"
        android:textColor="#000"
        android:textSize="16sp"
        android:visibility="gone" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/PhoneNumberType2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PhoneNumberType1"
        android:padding="16dp"
        android:text="Phone Number"
        android:textColor="#000"
        android:textSize="16sp"
        android:visibility="gone" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/PhoneNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PhoneNumberType1"
        android:layout_toRightOf="@id/PhoneNumberType2"
        android:padding="16dp"
        android:text="Phone Number"
        android:textColor="#000"
        android:textSize="16sp"
        android:visibility="gone" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PhoneNumberType2"
        android:padding="16dp"
        android:text="Email"
        android:textColor="#000"
        android:textSize="16sp"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PhoneNumberType2"
        android:layout_toRightOf="@+id/emailTextView"
        android:padding="16dp"
        android:text="Email"
        android:textColor="#000"
        android:textSize="16sp"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_margin="30dp"
        android:inputType="number"
        android:hint="Edit Number" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editNumber"
        android:inputType="text"
        android:layout_margin="30dp"
        android:hint="Edit Name" />

    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:text="UPDATE"
        android:textColor="#000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/makeFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/update"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#000"
        android:text="make fav"
        android:textColor="#fff" />

</RelativeLayout>